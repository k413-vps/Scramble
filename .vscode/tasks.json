{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Databases Dev",
            "type": "shell",
            // force recreate restarts the redis instance so isBackground is satisfied
            "command": "docker compose -p scramble_dev --env-file ../../backend/.env.dev --env-file .env up --force-recreate",
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "beginsPattern": ".", 
                    "endsPattern": "Ready to accept connections" //redis
                }
            },
            "presentation": {
                "panel": "new"
            },
            "options": {
                "cwd": "deployment/dev"
            },
            "isBackground": true
        },
        {
            "label": "Run Backend Dev",
            "type": "shell",
            "command": "npm run dev",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "group": "dev"
            },
            "options": {
                "cwd": "backend"
            },
            "dependsOn": ["Run Databases Dev"],
            "dependsOrder": "sequence"
        },
        {
            "label": "Run Frontend Dev",
            "type": "shell",
            "command": "npm run dev",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "group": "dev"
            },
            "options": {
                "cwd": "frontend/scramble"
            }
        },
        {
            "label": "Run Dev",
            "dependsOn": ["Run Backend Dev", "Run Frontend Dev"],
            "dependsOrder": "parallel",
            "problemMatcher": []
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "docker buildx build --build-context frontend=. --build-context shared=../shared -f Dockerfile . -t frontend",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "group": "build"
            },
            "options": {
                "cwd": "frontend"
            }
        },
        {
            "label": "Build Backend",
            "type": "shell",
            "command": "docker buildx build --build-context backend=. --build-context shared=../shared -f Dockerfile . -t backend",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "group": "build"
            },
            "options": {
                "cwd": "backend"
            }
        },
        {
            "label": "Run Prod",
            "type": "shell",
            "command": "docker compose -p scramble_prod --env-file ../../backend/.env.prod  --env-file .env up",
            "problemMatcher": [],
            "presentation": {
                "panel": "new"
            },
            "dependsOn": ["Build Backend", "Build Frontend"],
            "options": {
                "cwd": "deployment/prod"
            }
        }
    ]
}
